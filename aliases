# basic aliases
alias grep="grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,node_modules,vendor}"
alias egrep="egrep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,node_modules,vendor}"
alias fgrep="fgrep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,node_modules,vendor}"
alias ..="cd .."
alias ...="cd ../.."

# git aliases
alias g="git"
alias ga="git add"
alias gcmsg="git commit -m"
alias gd="git diff"
alias gst="git status"
